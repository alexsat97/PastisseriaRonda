<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Negocio.Mantenimiento">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="50dp"
        android:layout_margin="20dp"
        android:src="@drawable/escudo"
        app:tint="@color/colorPrimaryDark"
        android:layout_marginBottom="24dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/prod"
            android:layout_width="300dp"
            android:layout_marginTop="@dimen/marginm"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:elevation="@dimen/ms"
            android:focusable="true"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/radius">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/regpro"
                android:textColor="@color/white"
                android:textSize="@dimen/tm" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/temp"
            android:layout_width="300dp"
            android:layout_marginTop="@dimen/marginm"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:elevation="@dimen/ms"
            android:focusable="true"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/radius">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/regtemp"
                android:textColor="@color/white"
                android:textSize="@dimen/tm" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/limp"
            android:layout_width="300dp"
            android:layout_marginTop="@dimen/marginm"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:elevation="@dimen/ms"
            android:focusable="true"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/radius">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/reglimp"
                android:textColor="@color/white"
                android:textSize="@dimen/tm" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>